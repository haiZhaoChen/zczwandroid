<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_head_trend_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/de_default_portrait"/>
    <TextView
        android:id="@+id/txt_name_trend_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_toRightOf="@id/img_head_trend_item"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/txt_time_trend_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#939393"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_head_trend_item"
        android:layout_alignBottom="@id/img_head_trend_item"/>

    <TextView
        android:id="@+id/comment_content_trend_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赞了这条动态"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@id/img_head_trend_item"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@id/comment_content_trend_item"
        android:layout_marginTop="10dp"
        android:background="#f7f7f7">

        <ImageView
            android:id="@+id/img_host_head_trend_item"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/head_commentbig"/>
        <TextView
            android:id="@+id/txt_host_name_trend_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/img_host_head_trend_item"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/content_trend_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
            android:textSize="14sp"
            android:textColor="#5b5b5b"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@id/img_host_head_trend_item"
            android:layout_below="@id/txt_host_name_trend_item"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
</RelativeLayout>