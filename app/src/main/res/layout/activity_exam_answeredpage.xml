<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/white"
                android:id="@+id/answered_top_img"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/exam_little_qiu"/>
                <ImageView
                    android:id="@+id/exam_center_qiu"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/exam_center_qiu"/>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:text="得分"
                        android:textColor="@color/gainsboro"
                        />

                    <TextView
                        android:id="@+id/exam_score_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="35sp"
                        android:text="100"
                        android:textStyle="bold"
                        android:textColor="@color/whitesmoke"
                        android:layout_marginTop="3dp"
                        />

                </LinearLayout>


            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/part2"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="80dp"
                android:layout_below="@+id/answered_top_img">
                <View
                    android:id="@+id/center_view"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:background="@color/gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@+id/center_view"
                    android:layout_alignParentLeft="true"
                    >
                    <TextView
                        android:id="@+id/text_title1"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:text="总量"
                        android:textAlignment="center"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/text_title1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ques_total_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_black2"
                            android:text="10"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginLeft="2dp"
                            android:text="题"
                            />

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/center_view"
                    android:layout_alignParentRight="true"
                    >
                    <TextView
                        android:id="@+id/text_title2"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:text="答对"
                        android:textAlignment="center"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/text_title2"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/answer_total_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_black2"
                            android:text="10"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginLeft="2dp"
                            android:text="题"
                            />

                    </LinearLayout>


                </RelativeLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/part2"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/title_part"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/exam_center_qiu"/>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:text="答题卡"
                        android:layout_marginLeft="1dp"
                        android:textColor="@color/text_black1"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="15sp"/>

                </LinearLayout>



                <org.bigdata.zczw.ui.DateScrollGridView
                    android:id="@+id/item_grid_check_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:columnWidth="48dp"
                    android:numColumns="5"
                    android:horizontalSpacing="5dp"
                    android:verticalSpacing="8dp"
                    android:stretchMode="columnWidth"
                    android:layout_marginBottom="8dp">

                </org.bigdata.zczw.ui.DateScrollGridView>

                <Button
                    android:id="@+id/ques_answers_list_btn"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/submit_btn"
                    android:text="查看解析"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>



        </LinearLayout>


    </ScrollView>



</RelativeLayout>