<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/msg_activity"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    tools:context="org.bigdata.zczw.activity.MessageActivity">



    <LinearLayout
        android:id="@+id/msg_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#f9f9f9">
        <RelativeLayout
            android:id="@+id/msg_line_like"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/msg_img_heart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_heart_outline_grey"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/msg_txt_collectNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textColor="#838383"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/msg_img_heart"/>

        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cdcdcd"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <RelativeLayout
            android:id="@+id/msg_line_comment"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/msg_img_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_comment"/>
            <TextView
                android:id="@+id/msg_txt_commentNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textColor="#838383"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/msg_img_comment"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cdcdcd"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <RelativeLayout
            android:id="@+id/msg_line_prasie"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/msg_img_praise"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_praise_normal"/>
            <TextView
                android:id="@+id/msg_txt_praiseNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞"
                android:textColor="#838383"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/msg_img_praise"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/msg_line_gray1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#f2f2f2"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_above="@id/msg_below"
        android:layout_below="@id/msg_line_gray1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/msg_more_act"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/img_more"
                android:layout_marginRight="18dp"
                android:layout_marginTop="18dp"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/img_feed_type"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_feed_type_all"
                android:layout_toLeftOf="@+id/msg_more_act"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/msg_userProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/de_default_portrait" />

            <TextView
                android:id="@+id/msg_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/msg_userProfile"
                android:paddingLeft="5dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/msg_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:layout_toRightOf="@id/msg_userProfile"
                android:layout_alignBottom="@id/msg_userProfile"
                android:paddingLeft="5dp"
                android:layout_marginTop="2dp"/>
            <TextView
                android:id="@+id/msg_read_num_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:layout_toRightOf="@id/msg_publish_time"
                android:layout_alignBottom="@id/msg_userProfile"
                android:paddingLeft="12dp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/msg_content_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:minLines="1"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/black"
                android:linksClickable="true"
                android:textIsSelectable="true"
                android:layout_below="@+id/msg_userProfile"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:autoLink="web"
                android:textColorLink="#0082CB"
                android:lineSpacingExtra="3dp" />

            <org.bigdata.zczw.ui.NoScrollListView
                android:id="@+id/list_word_file_feed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:divider="@null"
                android:layout_below="@+id/msg_content_act"
                android:visibility="gone">

            </org.bigdata.zczw.ui.NoScrollListView>


            <LinearLayout
                android:id="@+id/ll_record_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f0f0f0"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_below="@+id/list_word_file_feed"
                android:visibility="gone">
                <TextView
                    android:id="@+id/record_message_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:textColor="#5a5858"
                    android:autoLink="web"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:linksClickable="true"
                    android:textIsSelectable="true"
                    android:layout_gravity="center_horizontal"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <org.bigdata.zczw.ui.NoScrollGridView
                        android:id="@+id/record_img_gridview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:columnWidth="120dp"
                        android:gravity="center"
                        android:horizontalSpacing="6dp"
                        android:numColumns="3"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="6dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"/>

                </FrameLayout>
                <RelativeLayout
                    android:id="@+id/record_video_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/record_video_img"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@color/black"/>
                    <ImageView
                        android:id="@+id/record_auto_video_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="60dp" />
                    <TextView
                        android:id="@+id/record_txt_video_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0Mb"
                        android:layout_margin="5dp"
                        android:layout_alignLeft="@id/record_video_img"
                        android:layout_alignBottom="@id/record_video_img"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/record_txt_video_len"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:layout_margin="5dp"
                        android:layout_alignRight="@id/record_video_img"
                        android:layout_alignBottom="@id/record_video_img"
                        android:textColor="@color/white"/>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/msg_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/ll_record_share">
                <org.bigdata.zczw.ui.NoScrollGridView
                    android:id="@+id/msg_img_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:columnWidth="120dp"
                    android:gravity="center"
                    android:horizontalSpacing="6dp"
                    android:numColumns="3"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="6dp"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/msg_video_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="6dp"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/msg_video_img"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@color/black"/>
                    <ImageView
                        android:id="@+id/msg_auto_video_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="60dp" />
                    <TextView
                        android:id="@+id/msg_video_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0Mb"
                        android:layout_margin="5dp"
                        android:layout_alignLeft="@id/msg_video_img"
                        android:layout_alignBottom="@id/msg_video_img"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/msg_video_len"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:layout_margin="5dp"
                        android:layout_alignRight="@id/msg_video_img"
                        android:layout_alignBottom="@id/msg_video_img"
                        android:textColor="@color/white"/>
                </RelativeLayout>
            </LinearLayout>

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flow_layout"
                zhy:max_select="0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/msg_media">
            </com.zhy.view.flowlayout.TagFlowLayout>

            <TextView
                android:id="@+id/msg_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:text="未定位"
                android:textSize="12sp"
                android:clickable="false"
                android:textColor="@color/titlecolor"
                android:layout_below="@id/id_flow_layout"/>

            <View
                android:id="@+id/msg_line_gray2"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#e5e5e5"
                android:layout_marginTop="6dp"
                android:layout_below="@id/msg_location"/>

            <RadioGroup
                android:id="@+id/msg_radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_below="@id/msg_line_gray2">
                <RadioButton
                    android:id="@+id/msg_rb_save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:text="收藏 0"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:button="@null"/>
                <RadioButton
                    android:id="@+id/msg_rb_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="评论 0"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:button="@null"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/msg_rb_praise"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="赞 0"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:button="@null"/>
            </RadioGroup>

            <View
                android:id="@+id/msg_line_gray3"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#e5e5e5"
                android:layout_below="@id/msg_radioGroup"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/msg_viewPager"
                android:background="@color/white"
                android:layout_below="@id/msg_line_gray3"
                android:layout_width="match_parent"
                android:layout_height="600dp">
            </android.support.v4.view.ViewPager>
        </RelativeLayout>

    </ScrollView>


    <RadioButton
        android:id="@+id/fab_btn"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:clickable="false"
        android:text="已读"
        android:textSize="12sp"
        android:button="@null"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_above="@+id/msg_below"
        android:layout_alignRight="@+id/msg_below"
        android:background="@drawable/rb_pai_btn"
        android:textColor="@color/pai_rb_txt"
        />

    <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/fab"-->
        <!--android:layout_margin="20dp"-->
        <!--android:layout_above="@+id/msg_below"-->
        <!--android:layout_alignRight="@+id/msg_below"-->
        <!--android:textAlignment="center"-->

        <!--app:elevation="6dp"/>-->

</RelativeLayout>