<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/solid_radius_white0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">
            <org.bigdata.zczw.ui.CircleImageView
                android:id="@+id/img_user_alarm_item"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:type="rounded_rect"
                app:rectRoundRadius="4dp"
                android:layout_margin="10dp"
                android:src="@drawable/de_default_portrait"/>
            <TextView
                android:id="@+id/txt_user_name_alarm_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户"
                android:textColor="@color/text_black1"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/img_user_alarm_item"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/txt_job_alarm_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大谈收费站"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/img_user_alarm_item"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/txt_xiaojia_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/11   08:36"
                android:textColor="#afafaf"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_leave_on"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/img_type">
                <TextView
                    android:id="@+id/txt_leave_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型：事假    |    天数：3天"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/txt_leave_begin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起始：2018/05/04"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_leave_xiaojia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/img_type"
            android:visibility="gone">
            <TextView
                android:id="@+id/txt_leave_xiaojia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型：事假    |    天数：3天"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginLeft="78dp"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/txt_leave_begin_time_xiaojia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始：2018/05/04"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginLeft="78dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_xiaojia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f2f2f2"
                android:layout_marginLeft="78dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已返回单位，向您销假。"
                android:textSize="16sp"
                android:textColor="#ef7800"
                android:layout_marginLeft="78dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>