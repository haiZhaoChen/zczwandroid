<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal"
    tools:context=".activity.FileActivity">

    <org.bigdata.zczw.ui.CircleImageView
        android:id="@+id/img_word_type_file"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon_word_other"
        android:scaleType="centerCrop"
        app:type="rounded_rect"
        app:rectRoundRadius="6dp"
        android:layout_marginTop="32dp"/>


    <TextView
        android:id="@+id/txt_word_name_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名字"
        android:textSize="17sp"
        android:textColor="@color/text_black1"
        android:maxLines="1"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/txt_word_size_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大小"
        android:textSize="14sp"
        android:textColor="@color/text_black2"/>


    <TextView
        android:id="@+id/txt_lode_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始下载"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@drawable/frame_radius_appcolor3"
        android:layout_margin="12dp"/>

    <LinearLayout
        android:id="@+id/ll_progress_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:max="100"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/txt_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在下载  10%"
            android:textColor="@color/text_black1"
            android:textSize="16sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_open_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用其他应用打开"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@drawable/frame_radius_appcolor3"
        android:layout_margin="12dp"
        android:visibility="gone"/>

</LinearLayout>