<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relative_name_pai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/more_pai"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/img_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"/>

        <ImageView
            android:id="@+id/img_pai_type"
            android:layout_width="73dp"
            android:layout_height="39dp"
            android:src="@drawable/icon_pai_good_jy"
            android:layout_toLeftOf="@+id/more_pai"
            android:layout_marginRight="30dp"/>

        <ImageView
            android:id="@+id/iv_userProfile_pai"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/de_default_portrait" />

        <TextView
            android:id="@+id/tv_name_pai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_userProfile_pai"
            android:paddingLeft="6dp"
            android:text="用户"
            android:textSize="18sp"
            android:textColor="#424040"
            android:layout_marginTop="4dp"/>
        <!--android:textColor="#de9116"-->

        <TextView
            android:id="@+id/tv_add_time_pai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_toRightOf="@id/iv_userProfile_pai"
            android:layout_alignBottom="@id/iv_userProfile_pai"
            android:paddingLeft="6dp"
            android:paddingRight="4dp"/>

        <TextView
            android:id="@+id/tv_publish_time_pai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:textSize="12sp"
            android:layout_toRightOf="@id/tv_add_time_pai"
            android:layout_alignBottom="@id/iv_userProfile_pai"
            android:paddingLeft="6dp"/>




    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_grid_pai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <org.bigdata.zczw.ui.NoScrollGridView
            android:id="@+id/img_grid_view_pai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:columnWidth="120dp"
            android:gravity="center"
            android:horizontalSpacing="6dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/video_content_pai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/video_img_pai_item"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@color/black"/>
        <ImageView
            android:id="@+id/auto_video_img_pai"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@android:drawable/ic_media_play"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_content_pai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:textColor="#5a5858"/>

</LinearLayout>