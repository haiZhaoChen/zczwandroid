<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/ll_topic_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp">
        <RelativeLayout
            android:id="@+id/rl_topic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:background="@color/black"
            android:visibility="gone">
            <ImageView
                android:id="@+id/img_topic_item"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/img_video_play_topic_item"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/record_txt_video_len"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_margin="4dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_content_topic_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#7e7e7e"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/rl_topic"
            android:layout_alignTop="@+id/rl_topic"
            android:layout_alignBottom="@+id/rl_topic"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_header_topic_item"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/de_default_portrait"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_header_topic_item">
            <TextView
                android:id="@+id/txt_name_topic_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈哈"
                android:textSize="14sp"
                android:textColor="#7f7e7e"
                android:layout_marginLeft="12dp" />
            <TextView
                android:id="@+id/txt_time_topic_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈哈"
                android:textSize="12sp"
                android:textColor="#ababab"
                android:layout_marginLeft="12dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_read_topic_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20人看过"
            android:textSize="14sp"
            android:textColor="#7f7e7e"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#ebf1f3"/>

</LinearLayout>