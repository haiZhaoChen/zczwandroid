<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rl_regulation_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/view_regulation"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_doc_right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img">

            <TextView
                android:id="@+id/txt_num_regulation_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="第1节"
                android:textColor="@color/text_black1"
                android:textSize="16sp"
                android:layout_marginLeft="24dp" />
            <TextView
                android:id="@+id/txt_name_regulation_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="规章阅读"
                android:textColor="@color/text_black2"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_below="@id/rl_regulation_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="#f0f0f0" />



</RelativeLayout>