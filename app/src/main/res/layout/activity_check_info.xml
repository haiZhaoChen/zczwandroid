<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:id="@+id/activity_check_info">

    <ScrollView
        android:id="@+id/scroll_view_check_act"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/solid_radius_white0">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/img_check_act"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@drawable/icon_check"
                        android:layout_marginRight="12dp"/>

                    <TextView
                        android:id="@+id/txt_unCheck_check_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未签到"
                        android:textSize="18sp"
                        android:textColor="#666666"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img_check_act"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_check_note_check_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:background="@drawable/solid_radius_white0">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_all_check"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日备注"
                        android:textSize="16sp"
                        android:textColor="#768893"
                        android:layout_marginLeft="4dp"/>

                </LinearLayout>

                <org.bigdata.zczw.ui.NoScrollListView
                    android:id="@+id/note_list_check_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:divider="@null"
                    android:layout_marginBottom="4dp">

                </org.bigdata.zczw.ui.NoScrollListView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/solid_radius_white0">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_all_check"/>
                    <TextView
                        android:id="@+id/txt_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018年04月签到统计"
                        android:textSize="16sp"
                        android:textColor="#768893"
                        android:layout_marginLeft="4dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@drawable/icon_check_back_green">
                                <TextView
                                    android:id="@+id/txt_zaigang_num_check_act"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="天"
                                    android:textSize="12sp"
                                    android:paddingTop="7sp"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="在岗"
                                android:textSize="14sp"
                                android:textColor="#768993"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@drawable/icon_check_back_yellow">
                                <TextView
                                    android:id="@+id/txt_shanglu_num_check_act"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 天"
                                    android:textSize="12sp"
                                    android:paddingTop="7sp"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="上路"
                                android:textSize="14sp"
                                android:textColor="#768993"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@drawable/icon_check_back_blue">
                                <TextView
                                    android:id="@+id/txt_chuchai_num_check_act"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="天"
                                    android:textSize="12sp"
                                    android:paddingTop="7sp"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="出差"
                                android:textSize="14sp"
                                android:textColor="#768993"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@drawable/icon_check_back_orange">
                                <TextView
                                    android:id="@+id/txt_xiujia_num_check_act"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 天"
                                    android:textSize="12sp"
                                    android:paddingTop="7sp"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="休假"
                                android:textSize="14sp"
                                android:textColor="#768993"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@drawable/icon_check_back_orange">
                                <TextView
                                    android:id="@+id/txt_tiaoxiu_num_check_act"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="天"
                                    android:textSize="12sp"
                                    android:paddingTop="7sp"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="调休"
                                android:textSize="14sp"
                                android:textColor="#768993"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@drawable/icon_check_back_green">
                                <TextView
                                    android:id="@+id/txt_qingjia_num_check_act"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="天"
                                    android:textSize="12sp"
                                    android:paddingTop="7sp"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="请假"
                                android:textSize="14sp"
                                android:textColor="#768993"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@drawable/icon_check_back_yellow">
                                <TextView
                                    android:id="@+id/txt_qita_num_check_act"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="天"
                                    android:textSize="12sp"
                                    android:paddingTop="7sp"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="其他"
                                android:textSize="14sp"
                                android:textColor="#768993"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/solid_radius_white0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_all_check"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="签到情况月统计"
                        android:textSize="16sp"
                        android:textColor="#768893"
                        android:layout_marginLeft="4dp"/>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/solid_radius_white0">

                    <!-- 日历时间选择栏 -->
                    <RelativeLayout
                        android:id="@+id/rl_time_select"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <ImageView
                            android:id="@+id/iv_left_one"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/icon_month_left"
                            android:layout_centerVertical="true"
                            android:padding="4dp"/>
                        <ImageView
                            android:id="@+id/iv_right_one"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/icon_month_right"
                            android:clickable="false"
                            android:layout_centerVertical="true"
                            android:padding="4dp"/>

                        <TextView
                            android:id="@+id/date_text_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:text="2017"
                            android:layout_marginLeft="4dp"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_week_check_act"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_below="@id/rl_time_select">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="周日"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="周一"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="周二"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="周三"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="周四"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="周五"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="周六"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <org.bigdata.zczw.ui.DateScrollGridView
                        android:id="@+id/date_grid_check_act"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnWidth="48dp"
                        android:numColumns="7"
                        android:horizontalSpacing="2dp"
                        android:verticalSpacing="3dp"
                        android:stretchMode="columnWidth"
                        android:layout_below="@id/ll_week_check_act"
                        android:layout_marginBottom="20dp">

                    </org.bigdata.zczw.ui.DateScrollGridView>
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

