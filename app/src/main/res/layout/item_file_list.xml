<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_word_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:padding="4dp"
        android:background="@drawable/frame_gray">

        <ImageView
            android:id="@+id/img_word_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_word_other"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/img_del_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/de_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/img_word_type"
            android:layout_toLeftOf="@+id/img_del_type"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txt_word_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textSize="15sp"
                android:textColor="@color/text_black1"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/txt_word_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大小"
                android:textSize="13sp"
                android:textColor="@color/text_black2"/>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>