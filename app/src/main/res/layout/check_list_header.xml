<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/solid_radius_white0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/img_date_check_header"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_all_check"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="人员出勤"
                android:textColor="#768893"
                android:layout_toRightOf="@id/img_date_check_header"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"/>

            <LinearLayout
                android:id="@+id/ll_select_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_day_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12月25日"
                    android:textSize="16sp"
                    android:textColor="#768893"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_date_down"
                    android:layout_marginLeft="4dp"
                    android:padding="6dp"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/icon_check_back_green">
                        <TextView
                            android:id="@+id/txt_zaigang_num_check_act"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人"
                            android:textSize="12sp"
                            android:paddingTop="6sp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在岗"
                        android:textSize="14sp"
                        android:textColor="#768993"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/icon_check_back_yellow">
                        <TextView
                            android:id="@+id/txt_shanglu_num_check_act"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人"
                            android:textSize="12sp"
                            android:paddingTop="6sp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上路"
                        android:textSize="14sp"
                        android:textColor="#768993"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/icon_check_back_blue">
                        <TextView
                            android:id="@+id/txt_chuchai_num_check_act"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人"
                            android:textSize="12sp"
                            android:paddingTop="6sp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出差"
                        android:textSize="14sp"
                        android:textColor="#768993"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/icon_check_back_orange">
                        <TextView
                            android:id="@+id/txt_xiujia_num_check_act"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人"
                            android:textSize="12sp"
                            android:paddingTop="6sp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="休假"
                        android:textSize="14sp"
                        android:textColor="#768993"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/icon_check_back_orange">
                        <TextView
                            android:id="@+id/txt_tiaoxiu_num_check_act"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人"
                            android:textSize="12sp"
                            android:paddingTop="6sp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="调休"
                        android:textSize="14sp"
                        android:textColor="#768993"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/icon_check_back_green">
                        <TextView
                            android:id="@+id/txt_qingjia_num_check_act"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人"
                            android:textSize="12sp"
                            android:paddingTop="6sp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请假"
                        android:textSize="14sp"
                        android:textColor="#768993"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/icon_check_back_yellow">
                        <TextView
                            android:id="@+id/txt_qita_num_check_act"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人"
                            android:textSize="12sp"
                            android:paddingTop="6sp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其他"
                        android:textSize="14sp"
                        android:textColor="#768993"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/solid_radius_white1">
        <ImageView
            android:id="@+id/img_date2_check_header"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/icon_all_check"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="成员月汇总"
            android:textColor="#768893"
            android:layout_toRightOf="@id/img_date2_check_header"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"/>

        <LinearLayout
            android:id="@+id/ll_select_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center">
            <TextView
                android:id="@+id/txt_month_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017年12月"
                android:textSize="16sp"
                android:textColor="#768893"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_date_down"
                android:layout_marginLeft="4dp"
                android:padding="6dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e9e9e9"
            android:layout_below="@id/img_date2_check_header"/>
    </RelativeLayout>


</LinearLayout>