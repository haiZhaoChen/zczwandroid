<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    android:id="@+id/login_root">

    <ImageView
        android:id="@+id/img_logo_login_act"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:src="@drawable/login_logo"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/ll_bottom_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="16dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/txt_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主管单位：张承高速承德段管理处"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="技术支持：河北科技大学大数据与社会计算研究中心"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/login_login_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/login_user_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_login_key"
            android:hint="请输入帐号"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/txt_content"
            android:inputType="number"/>

        <View
            android:id="@+id/line1_login_act"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_margin="4dp"
            android:layout_below="@id/login_user_edit"/>

        <RelativeLayout
            android:id="@+id/rl_pwd_login_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1_login_act">

            <EditText
                android:id="@+id/login_passwd_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_login_pwd"
                android:hint="请输入密码"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/txt_content"
                android:inputType="textPassword"/>

        </RelativeLayout>

        <View
            android:id="@+id/line2_login_act"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_margin="4dp"
            android:layout_below="@id/rl_pwd_login_act"/>

        <TextView
            android:id="@+id/forget_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textSize="14sp"
            android:textColor="#dfdddf"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/line2_login_act"
            android:paddingTop="8dp"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/login_login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2_login_act"
            android:background="@drawable/solid_radius_titlecolor"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="48dp"/>

    </RelativeLayout>





</RelativeLayout>
