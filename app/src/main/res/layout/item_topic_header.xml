<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:src="@drawable/img_topic_header"
            android:scaleType="fitXY"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <TextView
            android:id="@+id/txt_name_topic_header_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="话题讨论 | #我#"
            android:textColor="@color/text_black1"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/txt_num_topic_header_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帖子20"
            android:textColor="#777776"
            android:textSize="14sp"
            android:layout_below="@+id/txt_name_topic_header_item"/>
        <TextView
            android:id="@+id/txt_read_topic_header_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读20"
            android:textColor="#777776"
            android:textSize="14sp"
            android:layout_below="@+id/txt_name_topic_header_item"
            android:layout_toRightOf="@+id/txt_num_topic_header_item"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/line_gray"/>

</LinearLayout>