<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_user"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/item_img_user"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/de_default_portrait" />

    <TextView
        android:id="@+id/item_name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_img_user"
        android:paddingLeft="6dp"
        android:text="用户"
        android:textSize="18sp"
        android:textColor="#424040"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"/>
    <!--android:textColor="#de9116"-->

    <TextView
        android:id="@+id/item_time_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1111"
        android:textSize="12sp"
        android:layout_toRightOf="@id/item_img_user"
        android:layout_alignBottom="@id/item_img_user"
        android:paddingLeft="6dp"/>

</RelativeLayout>