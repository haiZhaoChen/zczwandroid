<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.LeaveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_user"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:background="@drawable/check_top_back">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:src="@drawable/icon_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请假条"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_days"
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:src="@drawable/icon_attend_day"
                android:layout_centerVertical="true"
                android:layout_margin="12dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_days"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/txt_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请假天数"
                    android:textColor="@color/text_black1"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="输入请假总天数"
                    android:textColor="#81888e"
                    android:textSize="14sp"
                    android:layout_below="@+id/txt_days"/>

                <ImageView
                    android:id="@+id/img_down_days"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_check_down" />

                <TextView
                    android:id="@+id/txt_leave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    android:textColor="#646f77"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/img_down_days"/>

                <TextView
                    android:id="@+id/txt_leave_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="18sp"
                    android:textColor="#646f77"
                    android:background="@color/white"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/txt_leave"/>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#c1c5c9"
                android:layout_toRightOf="@+id/img_days"
                android:layout_below="@+id/img_days"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_begin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_begin"
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:src="@drawable/icon_attend_begin"
                android:layout_centerVertical="true"
                android:layout_margin="12dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_begin"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/txt_begin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起始日期"
                    android:textColor="@color/text_black1"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择请假开始时间"
                    android:textColor="#81888e"
                    android:textSize="14sp"
                    android:layout_below="@+id/txt_begin"/>

                <ImageView
                    android:id="@+id/img_down_begin"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_check_down" />

                <TextView
                    android:id="@+id/txt_begin_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018"
                    android:textColor="#646f77"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/img_down_begin"/>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#c1c5c9"
                android:layout_toRightOf="@+id/img_begin"
                android:layout_below="@+id/img_begin"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_type"
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:src="@drawable/icon_attend_day"
                android:layout_centerVertical="true"
                android:layout_margin="12dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_type"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请假类型"
                    android:textColor="@color/text_black1"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击选择请假类型"
                    android:textColor="#81888e"
                    android:textSize="14sp"
                    android:layout_below="@+id/txt_type"/>

                <ImageView
                    android:id="@+id/img_down_type"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_check_down" />

                <TextView
                    android:id="@+id/txt_leave_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择"
                    android:textColor="#646f77"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/img_down_type"/>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#c1c5c9"
                android:layout_toRightOf="@+id/img_type"
                android:layout_below="@+id/img_type"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/btn_ok_leave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:background="@drawable/solid_radius_titlecolor1"/>

        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_edit_check_act"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7777"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f0f1f3"
            android:layout_alignParentBottom="true">
            <EditText
                android:id="@+id/edit_input_days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:hint="请输入数字天数"
                android:textColorHint="#999999"
                android:background="@drawable/solid_radius_white"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:minLines="1"
                android:gravity="left|top"
                android:inputType="number"/>
            <TextView
                android:id="@+id/txt_ok_days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:background="@drawable/solid_radius_blue2"/>

        </LinearLayout>

        <View
            android:id="@+id/view_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_edit">

        </View>

    </RelativeLayout>

</RelativeLayout>