<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_trend_msg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e5e5e5"
    tools:context="org.bigdata.zczw.activity.TrendMsgActivity">

    <RelativeLayout
        android:id="@+id/rl_about_me_trend_msg_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white">

        <org.bigdata.zczw.ui.CircleImageView
            android:id="@+id/img0"
            android:layout_height="36dp"
            android:layout_width="36dp"
            android:src="@drawable/aite"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            app:type="rounded_rect"
            app:rectRoundRadius="4dp"/>

        <TextView
            android:id="@+id/txt_about_me"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="\@我的"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/img0"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/txt_at_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:padding="2dp"
            android:gravity="center"
            android:background="@drawable/frame_radius_appcolor"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_at_to_new"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/dir_choose" />
    </RelativeLayout>
    <View
        android:id="@+id/view_trend0"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e5e5e5" />
    <RelativeLayout
        android:id="@+id/rl_pinglun_trend_msg_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <org.bigdata.zczw.ui.CircleImageView
            android:id="@+id/img1"
            android:layout_height="36dp"
            android:layout_width="36dp"
            android:src="@drawable/pinglun"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            app:type="rounded_rect"
            app:rectRoundRadius="4dp"/>

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="评论我的"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/txt_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:padding="2dp"
            android:gravity="center"
            android:background="@drawable/frame_radius_appcolor"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_com_to_new"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/dir_choose" />
    </RelativeLayout>
    <View
        android:id="@+id/view_trend1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e5e5e5" />

    <RelativeLayout
        android:id="@+id/rl_zan_trend_msg_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <org.bigdata.zczw.ui.CircleImageView
            android:id="@+id/img2"
            android:layout_height="36dp"
            android:layout_width="36dp"
            android:src="@drawable/zan"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            app:type="rounded_rect"
            app:rectRoundRadius="4dp"/>

        <TextView
            android:id="@+id/txt_zan"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="赞我的"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/img2"
            android:layout_marginLeft="20dp" />


        <TextView
            android:id="@+id/txt_zan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:padding="2dp"
            android:gravity="center"
            android:background="@drawable/frame_radius_appcolor"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_zan_to_new"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/dir_choose" />
    </RelativeLayout>
</LinearLayout>
