<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/txt_time_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2017年12月25日 星期一"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#666666"
            android:padding="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e9e9e9"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="240dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <org.bigdata.zczw.ui.NoScrollListView
                    android:id="@+id/check_list_check_pop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:scrollbars="none"/>

                <org.bigdata.zczw.ui.NoScrollListView
                    android:id="@+id/list_check_pop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:scrollbars="none"/>
            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/txt_pop_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="好的"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/solid_radius_titlecolor"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>