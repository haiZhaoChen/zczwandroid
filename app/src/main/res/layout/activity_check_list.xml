<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="org.bigdata.zczw.activity.CheckListActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/titlecolor">

        <ImageView
            android:id="@+id/img_back_check_list"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/de_actionbar_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到统计"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:layout_marginRight="16dp">
            <ImageView
                android:id="@+id/img_alarm_check_list"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/icon_check_alarm"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/alarm_count"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:text="2"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/red_point"
                android:layout_alignParentRight="true"
                android:visibility="gone"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/list_check_list_act"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:divider="@null"
        android:layout_below="@+id/bar">

    </ListView>

</RelativeLayout>
