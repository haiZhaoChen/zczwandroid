<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.bigdata.zczw.activity.UserInfoActivity"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/rela"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/userInfoname"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:text="姓名"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/async_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/de_default_portrait"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_below="@id/rela"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE9BF" />

        <RelativeLayout
            android:id="@+id/rela2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="单位/部门："
                android:textSize="16sp" />

            <TextView
                android:id="@+id/userInfounit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="办公室"
                android:textColor="#B3B3B3"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
            android:layout_below="@id/rela2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE9BF" />

        <RelativeLayout
            android:id="@+id/rela4"
            android:layout_below="@id/rela2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="岗 位："
                android:textSize="16sp" />

            <TextView
                android:id="@+id/userInfopost"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="工勤"
                android:textColor="#B3B3B3"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
            android:layout_below="@id/rela4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE9BF" />

        <RelativeLayout
            android:id="@+id/rl_personal_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rela4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人动态"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/dir_choose" />
        </RelativeLayout>

        <View
            android:layout_below="@id/rl_personal_detail"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE9BF" />

    </RelativeLayout>
</RelativeLayout>
