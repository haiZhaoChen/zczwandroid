<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_exam_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="org.bigdata.zczw.activity.ExamInfoPageActivity"
    >




    <ScrollView
        android:id="@+id/scroll_view_check_act"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ques_state_view"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/pro_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/title_img_name"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/exam_panduan"
                    />
                <TextView
                    android:id="@+id/question_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:text="正在加载。。。。。"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/questionA_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:visibility="gone"
                >


                <ImageView
                    android:id="@+id/questionA_img_name"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/a_normal"
                    />
                <TextView
                    android:id="@+id/questionA_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:text="正在加载。。。。。"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/questionB_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:visibility="gone"
                >


                <ImageView
                    android:id="@+id/questionB_img_name"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/b_normal"
                    />
                <TextView
                    android:id="@+id/questionB_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:text="正在加载。。。。。"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/questionC_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:visibility="gone"
                >


                <ImageView
                    android:id="@+id/questionC_img_name"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/c_normal"
                    />
                <TextView
                    android:id="@+id/questionC_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:text="正在加载。。。。。"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/questionD_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:visibility="gone"
                >


                <ImageView
                    android:id="@+id/questionD_img_name"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/d_normal"
                    />
                <TextView
                    android:id="@+id/questionD_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:text="正在加载。。。。。"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/questionE_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:visibility="gone"
                >


                <ImageView
                    android:id="@+id/questionE_img_name"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/e_normal"
                    />
                <TextView
                    android:id="@+id/questionE_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:text="正在加载。。。。。"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <Button
                android:id="@+id/ques_submit_next"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/submit_btn"
                android:text="提交答案"
                android:textColor="@color/white"
                android:textSize="16sp" />



        </LinearLayout>


    </ScrollView>



    <LinearLayout
        android:id="@+id/ques_state_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/left_to_right_bar"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:src="@drawable/exam_time_line"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/exam_right"/>

            <TextView
                android:id="@+id/exam_right_num"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:text="正确 0"
                android:gravity="center"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:src="@drawable/exam_error"/>

            <TextView
                android:id="@+id/exam_error_num"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:text="错误 0"
                android:gravity="center"
                android:textAlignment="center" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/exam_option"
                    />
                <TextView
                    android:id="@+id/exam_answer_num"
                    android:layout_width="48dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="1/10"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textSize="13sp"

                    />


            </LinearLayout>





        </LinearLayout>


        

    </LinearLayout>








</RelativeLayout>