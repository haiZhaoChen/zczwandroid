<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.bigdata.zczw.activity.SetActivity">
    <RelativeLayout
        android:id="@+id/user_btn_pass"
        android:layout_below="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <ImageView
            android:layout_height="28dp"
            android:layout_width="28dp"
            android:src="@drawable/user_mima"
            android:layout_centerVertical="true"
            android:id="@+id/imageView2"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/setting_tenders"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="密码设置"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginLeft="20dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_below="@id/user_btn_pass"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e5e5e5" />

    <RelativeLayout
        android:id="@+id/user_btn_banben"
        android:layout_below="@id/view2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <ImageView
            android:layout_height="28dp"
            android:layout_width="28dp"
            android:src="@drawable/user_banben"
            android:layout_centerVertical="true"
            android:id="@+id/imageView"
            android:layout_marginLeft="20dp" />
        <TextView
            android:id="@+id/phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="关于张承政务"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_below="@id/user_btn_banben"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e5e5e5" />

    <RelativeLayout
        android:id="@+id/user_btn_exit"
        android:layout_below="@id/view3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_juxing_zhijiao_baise">

        <ImageView
            android:layout_height="28dp"
            android:layout_width="28dp"
            android:src="@drawable/user_tuideng"
            android:layout_centerVertical="true"
            android:id="@+id/imageView3"
            android:layout_marginLeft="20dp" />
        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="退出当前账号"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginLeft="20dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view4"
        android:layout_below="@id/user_btn_exit"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e5e5e5" />

    <RelativeLayout
        android:layout_below="@id/view4"
        android:id="@+id/user_btn_out"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">
        <ImageView
            android:layout_height="28dp"
            android:layout_width="28dp"
            android:src="@drawable/user_tuichu"
            android:layout_centerVertical="true"
            android:id="@+id/imageView4"
            android:layout_marginLeft="20dp" />
        <TextView
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="退出软件"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>

</RelativeLayout>
