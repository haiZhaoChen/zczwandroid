<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/de_ui_friend_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/px_to_dip_16"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/px_to_dip_16"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:background="@drawable/de_default_portrait" />

    <RelativeLayout
        android:id="@+id/rl_ui_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/de_ui_friend_icon">

        <ImageView
            android:id="@+id/img_dit_choose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dir_choose"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txt_ui_friend_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18833339999"
            android:textSize="16sp"
            android:textColor="#585858"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@id/img_dit_choose"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="18sp"
            android:background="#343434"
            android:layout_toLeftOf="@id/txt_ui_friend_phone"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/de_ui_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户"
            android:textColor="#343434"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/line"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_ui_friend_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="群组"
        android:textColor="#343434"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/de_ui_friend_icon"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/de_unread_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="张承政务"
        android:textColor="#afafaf"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/de_ui_friend_icon"/>

</RelativeLayout>