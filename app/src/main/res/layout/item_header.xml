<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_header"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/img_icon_theme"
            android:layout_width="56dp"
            android:layout_height="28dp"
            android:src="@drawable/txt_header"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"/>

        <ImageView
            android:id="@+id/img_icon_theme_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_theme_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_icon_theme"
            android:layout_toLeftOf="@id/img_icon_theme_right">
            <TextView
                android:id="@+id/txt_theme_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hhh"
                android:textSize="16sp"
                android:maxLines="1"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/txt_theme_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hhh"
                android:textSize="14sp"
                android:maxLines="1"
                android:textColor="#cccccc"/>

        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>