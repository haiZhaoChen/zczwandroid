<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#6000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择类型"
                android:textSize="16sp"
                android:textColor="@color/text_black2"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"/>

            <RadioGroup
                android:id="@+id/rg_add_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <RadioButton
                    android:id="@+id/rb_aq_add_type"
                    android:text="安全生产"
                    android:checked="true"
                    style="@style/pai_type_btn"
                    android:layout_marginRight="10dp"/>

                <RadioButton
                    android:id="@+id/rb_zt_add_type"
                    android:text="直通一线"
                    style="@style/pai_type_btn"
                    android:layout_marginRight="10dp"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:button="@null"/>

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布时段"
                android:textSize="16sp"
                android:textColor="@color/text_black2"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>
            <RadioGroup
                android:id="@+id/rg_add_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <RadioButton
                    android:id="@+id/rb_before_add_time"
                    android:text="岗前"
                    android:checked="true"
                    style="@style/pai_type_btn"
                    android:layout_marginRight="10dp"/>

                <RadioButton
                    android:id="@+id/rb_on_add_time"
                    android:text="岗中"
                    style="@style/pai_type_btn"
                    android:layout_marginRight="10dp"/>

                <RadioButton
                    android:id="@+id/rb_after_add_time"
                    android:text="岗后"
                    style="@style/pai_type_btn"
                    android:layout_marginRight="10dp"/>

                <RadioButton
                    android:id="@+id/rb_else_add_time"
                    android:text="其他"
                    style="@style/pai_type_btn"/>

            </RadioGroup>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:background="@color/line_gray"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_cancel_dialog_act"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="取消"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textColor="@color/text_black1"
                    android:background="@color/white"
                    android:gravity="center"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line_gray"/>

                <TextView
                    android:id="@+id/txt_ok_dialog_act"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="确定"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textColor="@color/text_black1"
                    android:gravity="center"/>
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>