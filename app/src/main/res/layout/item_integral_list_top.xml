<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/integral_score_list_bg">

    <!--android:background="@color/titlecolor"-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                >
                <View
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="28dp"
                    android:background="#fbde3f"/>

                <ImageView
                    android:id="@+id/top_icon_img2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/de_default_portrait" />


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="-9dp"

                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/integral_yinpai" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                >

            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                >
                <View
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="28dp"
                    android:background="#fbde3f"/>
                <ImageView
                    android:id="@+id/top_icon_img3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/de_default_portrait"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="-9dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/integral_tongpai" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"

                >
                <TextView
                    android:id="@+id/integral_name2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="陈海召"
                    android:textColor="@color/text_black1"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/integral_score2"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_below="@+id/integral_name2"
                    android:layout_marginTop="3dp"
                    android:text="1071"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:textAlignment="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/integral_unit2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/integral_score2"
                    android:layout_marginTop="3dp"
                    android:text="大摊收费站"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:gravity="center" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/integral_name1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="陈海召"
                    android:textColor="@color/text_black1"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/integral_score1"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_below="@+id/integral_name1"
                    android:layout_marginTop="3dp"
                    android:text="1071"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:textAlignment="center"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/integral_unit1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/integral_score1"
                    android:layout_marginTop="3dp"
                    android:text="大摊收费站"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:gravity="center" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/integral_name3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="陈海召"
                    android:textColor="@color/text_black1"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/integral_score3"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_below="@+id/integral_name3"
                    android:layout_marginTop="3dp"
                    android:text="1071"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:textAlignment="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/integral_unit3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/integral_score3"
                    android:layout_marginTop="3dp"
                    android:text="大摊收费站"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:gravity="center" />

            </RelativeLayout>


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"></RelativeLayout>
        <RelativeLayout
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/integral_top_center_bg"
            >
            <View
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:background="#fbde3f"/>
            <ImageView
                android:id="@+id/top_icon_img1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/de_default_portrait"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-18dp"
                android:src="@drawable/integral_jinpai" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"></RelativeLayout>
    </LinearLayout>




</RelativeLayout>