<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/rl_bar_msg_tag_act"
        android:layout_above="@+id/txt_next_msg_tag_act"

        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left|center_horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="排名类型"
                android:textSize="19sp"
                android:textColor="@color/text_black2"
                android:textAlignment="center"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <RadioGroup
                android:id="@+id/rg_tag_type_leader1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <RadioButton
                    android:id="@+id/rb_tag_gg"
                    android:checked="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="公共"

                    style="@style/pai_btn" />
                <RadioButton
                    android:id="@+id/rb_tag_sf"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="专业"

                    style="@style/pai_btn"/>

                <RadioButton
                    android:id="@+id/rb_tag_yh"
                    android:text="部门"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    style="@style/pai_btn"/>

            </RadioGroup>






        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left|center_horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="时段选择"
                android:textSize="19sp"
                android:textColor="@color/text_black2"
                android:textAlignment="center"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <RadioGroup
                android:id="@+id/rg_tag_type_leader2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <RadioButton
                    android:id="@+id/rb_tag_yizhou"
                    android:checked="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="月排名"

                    style="@style/pai_btn" />
                <RadioButton
                    android:id="@+id/rb_tag_yue"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="季排名"

                    style="@style/pai_btn"/>



                <RadioButton
                    android:id="@+id/rb_tag_sanyue"
                    android:text="年排名"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"

                    style="@style/pai_btn"/>

            </RadioGroup>


            <RadioGroup
                android:id="@+id/rg_tag_type_leader22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <RadioButton
                    android:id="@+id/rb_tag_liuyue"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="全时段"

                    style="@style/pai_btn" />
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>


                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>

            </RadioGroup>



        </LinearLayout>



    </LinearLayout>

</LinearLayout>